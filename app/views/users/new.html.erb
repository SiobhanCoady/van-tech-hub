<body class="bodyText">


  <div class="container">
    <h1 class="title">new user</h1>
    <div class="parallax-container parallax responsive-img">
    </div>
      <div class="row">
        <div class="col s12">
          <%= form_for @user do |f| %>
            <div class="row">
              <div id="formUser" class="input-field col s6">
                <!-- <input id="name" type="text" class="validate"> -->
                  <%= f.label :first_name %>
                  <%= f.text_field :first_name, class: 'validate', id: 'name', type: 'text' %>
              </div>
              <div id="formUser" class="input-field col s6">
                <!-- <input id="name" type="text" class="validate"> -->
                  <%= f.label :last_name %>
                  <%= f.text_field :last_name, class: 'validate', id: 'name', type: 'text' %>
              </div>
            </div>
            <div class="row">
              <div id="formUser" class="input-field col s12">
                <!-- <input id="password" type="password" class="validate"> -->
                <!-- <label for="password">Password</label> -->
                <%= f.label :password %>
                <%= f.password_field :password, class: 'validate', id: 'password', type: 'password' %>
              </div>
            </div>
            <div class="row">
              <div id="formUser" class="input-field col s12">
                <!-- <input id="password" type="password" class="validate"> -->
                <!-- <label for="password">Password</label> -->
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'validate', id: 'password', type: 'password' %>
              </div>
            </div>
            <div class="row">
              <div id="formUser" class="input-field col s12">
                <!-- <input id="email" type="email" class="validate"> -->
                <%= f.label :email %>
                <%= f.email_field :email, class: 'validate', id: 'email', type: 'email' %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 btncontainer">
                <%= f.submit 'Sign Up', id: 'btnUser', class: 'waves-effect waves-light btn'%>
              </div>
            </div>
            <% end %>
            <p class="signInText">Already have an account? <%= link_to "Sign In", new_session_path, class: 'signInLink' %></p>
        </div>
      </div>
  </div>
</body>
