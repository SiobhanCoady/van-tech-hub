<body class="admin">
  <div class="container">
    <div class="row">
      <div id="folders">

        <div class="col s2 tab l900"><%= link_to "Users", admin_index_path, :class => "usersLink"%></div>
        <div class="col s2 tab l900"><%= link_to "Events", admin_events_path, :class => "eventsLink" %></div>
        <div class="col s2 tab l900"><%= link_to "News", admin_news_index_path, :class => "newsLink" %></div>
        <div class="col s2 tab l900"><%= link_to "Organizations", organizations_path, :class => "orgLink" %></div>
        <div class="col s2 tab l900"><%= link_to "Technologies", technologies_path, :class => "techLink" %></div>
        <div class="col s2 tab"><h3 class="pageTitle right-align titleAdmin">Admin</h3></div>

      </div>
    </div>
    <div id="rectangleTech">

      <div class="row">
        <div class="userBoxes">
          <span id="techId" "class="col s6 h5class">Technology</span>
          <div class="row">
            <div class="col s12">
              <%= @technology.errors.full_messages.join(', ') %>
              <%= form_for @technology do |f| %>
                <div class="row">
                  <div id="formUser" class="input-field col s1"></div>
                  <div id="formUser" class="input-field col s8">
                      <%= f.label :Language %>
                      <%= f.text_field :language, id: 'name', type: 'text' %>
                  </div>

                  <div class="input-field col s2 btncontainer">
                      <%= f.submit 'Submit', :class => 'waves-effect waves-light btn'%>
                  </div>

                </div>
                <% end %>
            </div>
          </div>
          <span class="col s4 h5class1 techId">Users</span>

          <table class="highlight pendingTable">
            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>

            <% @technologies.each do |technology| %>

            <tbody>
              <tr>
                <td><h6><%= technology.language%></h6></td>
                <td><%= link_to 'Delete', technology_path(id: technology.id), method: :delete, data: { confirm: 'Are you sure?ü§î' }  %></td>
              </tr>
            </tbody>
            <% end %>

          </table>
        </div>
      </div>
    </div>
  </div>
